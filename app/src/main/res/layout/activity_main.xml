<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FFF"
                android:layout_margin="20dp"
                android:textSize="20dp"
                android:text="@string/protocolos" />

            <ImageView
                android:id="@+id/imgProtocolos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icocovid" />

            <ImageView
                android:id="@+id/imgHospitales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="hospitales"
                app:srcCompat="@drawable/imghospital" />

            <ImageView
                android:id="@+id/imgClinicas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="clinicas"
                app:srcCompat="@drawable/imgclinica" />

            <ImageView
                android:id="@+id/imgPostas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="postas"
                app:srcCompat="@drawable/imgposta" />

            <ImageView
                android:id="@+id/imgMercados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="mercados"
                app:srcCompat="@drawable/imgmercado" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>